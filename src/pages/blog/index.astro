---
import BaseHead from "../../components/BaseHead.astro";
import Container from "../../components/Container.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";

import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="es">
    <head
        ><BaseHead
            title="Denny's Blog"
            description="Welcome to my blog!"
        /></head
    >
    <body class="flex min-h-screen flex-col">
        <Header />
        <main>
            <Container>
                <div
                    class="grid grid-cols-1 gap-y-3 md:grid-cols-2 md:gap-x-16 md:gap-y-7 lg:gap-x-32"
                >
                    {
                        posts.map((post) => (
                            <section class="space-y-4">
                                <div class="overflow-hidden rounded-md transition-all hover:scale-105">
                                    <a href={`/blog/${post.slug}/`}>
                                        <Image src={post.data.heroImage} alt="" />
                                    </a>
                                </div>
                                <h3 class="text-3xl font-bold leading-snug">
                                    <a
                                        class="hover:underline"
                                        href={`/blog/${post.slug}/`}
                                    >
                                        {post.data.title}
                                    </a>
                                </h3>
                                <div class="text-lg">
                                    <FormattedDate date={post.data.pubDate} />
                                </div>
                            </section>
                        ))
                    }
                </div>
            </Container>
        </main>
        <Footer />
    </body>
</html>
