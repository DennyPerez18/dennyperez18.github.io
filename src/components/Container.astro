---
type Props = {
    usePy?: Boolean;
    large?: Boolean;
    class?: String;
};

const { usePy, large, class: className } = Astro.props;
---

<div
    class:list={[
        "container px-8 mx-auto xl:px-5",
        large ? " max-w-screen-xl" : " max-w-screen-lg",
        (usePy ?? true) && "py-5 lg:py-8",
        className,
    ]}
>
    <slot />
</div>
