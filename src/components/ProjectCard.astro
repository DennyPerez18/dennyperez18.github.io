---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"project">;

const {
    data: { title, role, years, link, icon },
    body,
} = Astro.props;
---

<section class="space-y-1 rounded border-2 border-slate-300 bg-slate-200 p-2">
    <a class="space-y-1" href={link}>
        <div class="flex items-center gap-1">
            {icon && <Image src={icon} width={25} alt="" />}
            <h3 class="text-lg leading-4">
                {title}
            </h3>
        </div>
        <div class="flex justify-between">
            <p class="text-xs">{role}</p>
            <p class="text-xs">{years}</p>
        </div>
    </a>
    <hr class="border-slate-400" />
    <p class="text-justify text-slate-800">
        {body}
    </p>
</section>
