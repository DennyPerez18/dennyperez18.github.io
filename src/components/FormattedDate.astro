---
export interface Props {
  date: Date;
  class?: string;
}

const { date, class: className } = Astro.props;
---

<time class={className} datetime={date.toISOString()}>
  {
    date.toLocaleDateString("es-us", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  }
</time>
